<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>io.septimalmind.baboon.baboon-intellij</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Baboon Support</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://7mind.io/">Septimal Mind</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Syntax highlighting for <a href="https://github.com/7mind/baboon">Baboon DML</a> (Data Modeling Language)
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- BABOON -->
        <fileType
            name="Baboon"
            implementationClass="io.septimalmind.baboon.baboonintellij.language.BaboonFileType"
            fieldName="INSTANCE"
            language="baboon"
            extensions="baboon;bmo"/>
        <lang.parserDefinition
            language="baboon"
            implementationClass="io.septimalmind.baboon.baboonintellij.psi.BaboonParserDefinition"
        />
        <!-- Stub index support for fast class name lookup -->
        <stubElementTypeHolder class="io.septimalmind.baboon.baboonintellij.psi.stubs.BaboonStubElementTypes"
                               externalIdPrefix="baboon."/>
        <stubIndex implementation="io.septimalmind.baboon.baboonintellij.psi.stubs.BaboonClassNameIndex"/>
        <lang.syntaxHighlighterFactory
            language="baboon"
            implementationClass="io.septimalmind.baboon.baboonintellij.language.highlight.BaboonSyntaxHighlighterFactory"
        />
        <annotator language="baboon" implementationClass="io.septimalmind.baboon.baboonintellij.language.annotator.BaboonHighlightsAnnotator"/>
        <completion.contributor
            language="baboon"
            implementationClass="io.septimalmind.baboon.baboonintellij.language.completion.BaboonCompletionContributor"/>
        <!-- NOTE: Currently not used for references ! -->
        <!--        <psi.referenceContributor-->
        <!--            language="baboon"-->
        <!--            implementation="io.septimalmind.baboon.baboonintellij.psi.BaboonReferenceContributor"/>-->
        <lang.braceMatcher language="baboon" implementationClass="io.septimalmind.baboon.baboonintellij.psi.BaboonBraceMatcher"/>

        <!-- IDEALINGUA -->
        <fileType
                name="Idealingua"
                implementationClass="io.septimalmind.idealingua.idealinguaintellij.language.IdealinguaFileType"
                fieldName="INSTANCE"
                language="idealingua"
                extensions="model;domain"/>
        <lang.parserDefinition
                language="idealingua"
                implementationClass="io.septimalmind.idealingua.idealinguaintellij.psi.IdealinguaParserDefinition"
        />
        <!-- Stub index support for fast class name lookup -->
        <stubElementTypeHolder class="io.septimalmind.idealingua.idealinguaintellij.psi.stubs.IdealinguaStubElementTypes"
                               externalIdPrefix="idealingua."/>
        <stubIndex implementation="io.septimalmind.idealingua.idealinguaintellij.psi.stubs.IdealinguaClassNameIndex"/>
        <lang.syntaxHighlighterFactory
                language="idealingua"
                implementationClass="io.septimalmind.idealingua.idealinguaintellij.language.highlight.IdealinguaSyntaxHighlighterFactory"
        />
        <annotator language="idealingua" implementationClass="io.septimalmind.idealingua.idealinguaintellij.language.annotator.IdealinguaHighlightsAnnotator"/>
        <completion.contributor
                language="idealingua"
                implementationClass="io.septimalmind.idealingua.idealinguaintellij.language.completion.IdealinguaCompletionContributor"/>
        <!-- NOTE: Currently not used for references ! -->
        <!--        <psi.referenceContributor-->
        <!--            language="idealingua"-->
        <!--            implementation="io.septimalmind.idealingua.idealinguaintellij.psi.IdealinguaReferenceContributor"/>-->
        <lang.braceMatcher language="idealingua" implementationClass="io.septimalmind.idealingua.idealinguaintellij.psi.IdealinguaBraceMatcher"/>
    </extensions>

    <actions>
        <action id="Baboon.NewBaboonFile"
                class="io.septimalmind.baboon.baboonintellij.ide.actions.CreateNewBaboonFileAction"
                text="Baboon File"
                description="Create new Baboon file">
        </action>
        <action id="Idealingua.NewIdealinguaFile"
                class="io.septimalmind.idealingua.idealinguaintellij.ide.actions.CreateNewIdealinguaFileAction"
                text="IdeaLingua File"
                description="Create new IdeaLingua file">
        </action>
    </actions>
</idea-plugin>